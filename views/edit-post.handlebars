
{{>post-card}}

{{#if post.Comments}}
{{log post.comments}}

{{#each post.Comments}}
    <div class="bg-white">
    <div>{{comment_contents}}</div>
    <div> {{user}}</div>
    {{log comment_contents}}
  </div>
  {{/each}}
  {{/if}}


  

  <form class="commentInput">
    <div class="bg-light p-2">
      <div class="d-flex flex-row align-items-start">
        <textarea class="form-control ml-1 shadow-none textarea" id="comment-box"></textarea>
      </div>
      <div class="mt-2 text-right">
        <button id="commentID" data-id="{{post.id}}" type="submit" class="btn btn-primary btn-sm shadow-none">
          Post comment
        </button>
      </div>
    </div>
  </form>

  <script src="/js/comments.js"></script>
 
